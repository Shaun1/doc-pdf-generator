# http://EditorConfig.org
# File Spec: https://editorconfig-specification.readthedocs.io/en/latest/

# Do not recurse configuration beyond this file
root = true

# Default behavior for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

# Makefile overrides
[{M,m}akefile]
indent_style = tab

